{
  "name": "@urbit/sigil-js",
  "version": "2.1.0",
  "private": false,
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.esm.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "require": "./dist/core.js",
      "import": "./dist/core.esm.js",
      "types": "./dist/core.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/urbit/sigil-js"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "devDependencies": {
    "@size-limit/esbuild-why": "^8.2.4",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@tlon/sigil-js": "^1.4.5",
    "@tsconfig/recommended": "^1.0.2",
    "@types/invariant": "^2.2.31",
    "@types/lodash.memoize": "^4.1.7",
    "dts-cli": "^2.0.0",
    "husky": "^8.0.3",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "invariant": "^2.2.4",
    "lodash.memoize": "^4.1.2"
  },
  "scripts": {
    "test": "jest",
    "dev": "npm run build && cp -a ./dist/* ./preview/lib",
    "start": "dts watch",
    "build": "dts build --entry ./src/index.ts --entry ./src/core.ts",
    "lint": "dts lint",
    "lint:fix": "dts lint src --fix",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/sigil-js.cjs.production.min.js",
      "limit": "30 KB"
    },
    {
      "path": "dist/sigil-js.esm.js",
      "limit": "30 KB"
    }
  ]
}
